<%- include("partials/header"); -%>
        <div class="container">
          <div class="form-box">
            <form action="/admin" method="post">
              <style>
                input {
                  outline: none;
                }

                .input-label {
                  text-transform: capitalize;
                }

                form {
                  display: inline-block;
                }

                .form-box {
                  width: 100%;
                  height: max-content;
                  margin: 1%;
                  margin-bottom: 1rem;
                }

                .form-input {
                  width: 250%;
                  height: 2.333rem;
                  border-radius: 10px;
                  text-align: center;
                }

                textarea.form-input {
                  height: 10rem;
                  border-radius: 10px;
                  padding: 5px;
                }

                button.form-input-btn {
                  width: 100%;
                  border: 0;
                  height: 2rem;
                  align-content: center;
                  align-items: center;
                  font-weight: bold;
                  font-weight: 700;
                  border-radius: 10px;
                }

                button.form-input-btn:hover {
                  background-color: #247;
                }
              </style>
              <div class="form-box">
                <label for="title" class="input-label">Title: </label><input type="text" name="title" class="form-input"
                  placeholder="Enter blog post" id="title" />
              </div>
              <div class="form-box">
                <label for="category" class="input-label">category</label><select name="category" class="form-input"
                  id="category">
                  <option value="World">World</option>
                  <option value="US">Nigeria</option>
                  <option value="Technology">Technology</option>
                  <option value="Design">Design</option>
                  <option value="Culture">Culture</option>
                  <option value="Business">Business</option>
                  <option value="Politics">Politics</option>
                  <option value="School">School</option>
                  <option value="Science">Science</option>
                  <option value="Health">Health</option>
                  <option value="Sport">Sport</option>
                  <option value="Travel">Travel</option>
                </select>
              </div>
              <div class="form-box">
                <label for="content" class="input-label">content</label>
                <textarea name="content" id="content" class="form-input" cols="30" placeholder="Enter blog content"
                  rows="500"></textarea>
              </div>
              <button type="submit" class="form-input-btn">Publish</button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
